<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zoom Clone</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
    />
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
  </head>
  <body>
    <section class="section">
      <div class="container">
        <h1 class="title">
          Zoom Clone
        </h1>
        <p class="subtitle">for AlKhalaf</p>
      </div>
    </section>
    <section class="section">
      <div class="container">
        <div class="py-1 px-2">
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <input
                id="short_url"
                class="input"
                type="text"
                placeholder="Room URL"
              />
              <span class="icon is-small is-left">
                <i class="fas fa-link"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <p class="control">
              <a
                onclick="onCreateButtonClicked()"
                id="create_room_button"
                class="button is-success"
              >
                Create or Join Room
              </a>
            </p>
          </div>
        </div>
        <div class="py-1 px-2">
          <a class="button is-info is-outlined" href="/room/">
            Create RANDOM Room
          </a>
        </div>
      </div>
    </section>
    <script src="/js/index_script.js"></script>
  </body>
</html>
